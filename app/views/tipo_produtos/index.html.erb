<p id="notice"><%= notice %></p>

<h1>Tipo de Produtos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_produtos.each do |tipo_produto| %>
      <tr>
        <td><%= tipo_produto.nome %></td>
        <td><%= link_to 'Listar', tipo_produto %></td>
        <td><%= link_to 'Editar', edit_tipo_produto_path(tipo_produto) %></td>
        <td><%= link_to 'Excluir', tipo_produto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Tipo  de Produto', new_tipo_produto_path %>
