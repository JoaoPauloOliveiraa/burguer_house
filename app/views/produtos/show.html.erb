<%- model_class = Produto -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @produto.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descricao) %>:</strong></dt>
  <dd><%= @produto.descricao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quantidade) %>:</strong></dt>
  <dd><%= @produto.quantidade %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tipo_produto_id) %>:</strong></dt>
  <dd><%= @produto.tipo_produto.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:valor) %>:</strong></dt>
  <dd><%="R$ #{@produto.valor}" %></dd>
</dl>

<%= link_to t('.back', :default => t("Voltar")),
              produtos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("Editar")),
              edit_produto_path(@produto), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("Excluir")),
              produto_path(@produto),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
