<%= form_for [@pedido, @pedido_produto], :html => { :class => "form-horizontal pedido_produto" } do |f| %>

  <% if @pedido_produto.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@pedido_produto.errors.count, "error") %> prohibited this pedido_produto from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @pedido_produto.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  
  <div class="form-group">
    <%= f.label :produto_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :produto_id, Produto.all.collect{|p| [p.nome, p.id]}, {},
      :class => 'form-control' %>
    </div>
    <%=f.error_span(:produto_id) %>
  </div>
  <div class="form-group">
    <%= f.label :valor, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :valor, :class => 'form-control' %>
    </div>
    <%=f.error_span(:valor) %>
  </div>
  <div class="form-group">
    <%= f.label :quantidade, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :quantidade, :class => 'form-control' %>
    </div>
    <%=f.error_span(:quantidade) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                pedido_pedido_produtos_path(@pedido), :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
