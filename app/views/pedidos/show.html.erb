<%- model_class = Pedido -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:cliente_id) %>:</strong></dt>
  <dd><%= @pedido.cliente.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:valor_total) %>:</strong></dt>
  <dd><%= @pedido.valor_total %></dd>
  <dt><strong><%= model_class.human_attribute_name("Produtos:")%></strong></dt> &nbsp; &nbsp; &nbsp;
 
  <% @pedido.pedido_produtos.each do |pp| %>
    <%= pp.produto.nome %> - Valor Unidade R$ <%= pp.produto.valor %>
  <% end %>
 
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              pedidos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pedido_path(@pedido), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pedido_path(@pedido),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
